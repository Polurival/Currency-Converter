<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/prince_of_persia_ending"
    android:orientation="vertical"
    android:padding="5dp">

    <EditText
        android:id="@+id/etNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:alpha="0.6"
        android:background="@color/white"
        android:hint="@string/HowMuch"
        android:inputType="numberDecimal"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnTransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNum1"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:alpha="0.6"
        android:background="@color/gold"
        android:onClick="transfer"
        android:text="@string/btnTransfer"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTransfer"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:alpha="0.6"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:minHeight="30dp"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/fromSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTransfer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:alpha="0.6"
        android:prompt="@string/transferFrom" />

    <Button
        android:id="@+id/btnChangeFromTo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/fromSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:alpha="0.7"
        android:background="@drawable/exchange_vertical"
        android:onClick="swapFromTo" />

    <Spinner
        android:id="@+id/toSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnChangeFromTo"
        android:layout_gravity="center_horizontal"
        android:alpha="0.6"
        android:prompt="@string/transferTo" />

    <Button
        android:id="@+id/btnIRRtoRUB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toSpinner"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:alpha="0.6"
        android:background="@color/white"
        android:text="@string/IRRtoRUB"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnIRRtoUSD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIRRtoRUB"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:alpha="0.6"
        android:background="@color/white"
        android:text="@string/IRRtoUSD"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRUBtoIRR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIRRtoUSD"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:alpha="0.6"
        android:background="@color/white"
        android:text="@string/RUBtoIRR"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnUSDtoIRR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRUBtoIRR"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:alpha="0.6"
        android:background="@color/white"
        android:text="@string/USDtoIRR"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnUpdateRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUSDtoIRR"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:alpha="0.6"
        android:background="@color/white"
        android:onClick="showUsdToRubRate"
        android:text="@string/updateRate"
        android:textSize="20sp" />
</RelativeLayout>
