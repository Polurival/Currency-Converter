<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
        android:layout_marginStart="@dimen/edit_text_horizontal_margin"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:alpha="0.6"
        android:background="@color/white"
        android:hint="@string/enter_amount"
        android:inputType="numberDecimal"
        android:maxLength="14"
        android:textColor="@color/lazure"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/fromSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editAmount"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:alpha="0.6"
        android:prompt="@string/transfer_from" />

    <Button
        android:id="@+id/btnSwapFromTo"
        android:layout_width="@dimen/btn_swap_width"
        android:layout_height="@dimen/btn_swap_height"
        android:layout_below="@+id/fromSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_vertical_margin"
        android:alpha="0.7"
        android:background="@drawable/swap"
        android:onClick="swapFromTo" />

    <Spinner
        android:id="@+id/toSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSwapFromTo"
        android:layout_gravity="center_horizontal"
        android:alpha="0.6"
        android:prompt="@string/transfer_to" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toSpinner"
        android:layout_marginBottom="@dimen/view_vertical_margin"
        android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
        android:layout_marginStart="@dimen/edit_text_horizontal_margin"
        android:alpha="0.6"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:minHeight="@dimen/text_view_result_min_height"
        android:textColor="@color/lazure"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResult"
        android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
        android:layout_marginStart="@dimen/edit_text_horizontal_margin"
        android:alpha="0.6"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:minHeight="@dimen/text_view_date_time_min_height"
        android:textSize="16sp" />

</RelativeLayout>
