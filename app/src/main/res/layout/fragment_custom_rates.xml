<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomRateFragment">

    <Spinner
        android:id="@+id/custom_currency_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_char_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_text_horizontal_margin"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_custom_currency"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_text_custom_currency_horizontal_margin"
            android:alpha="0.6"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:textColor="@color/azure"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_text_custom_currency_horizontal_margin"
            android:text="@string/rub_char_code"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_custom_hint"
            android:layout_width="@dimen/btn_swap_width"
            android:layout_height="@dimen/btn_swap_height"
            android:layout_marginStart="@dimen/edit_text_custom_currency_horizontal_margin"
            android:background="@drawable/ic_action_help"
            android:contentDescription="@string/custom_mode_help" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_custom_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_new_value" />

    <TextView
        android:id="@+id/tv_custom_mode_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_custom_mode_help"
        android:visibility="invisible" />

</LinearLayout>
